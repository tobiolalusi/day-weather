{
    "extends": [
        "airbnb",
        "prettier"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true,
            "experimentalObjectRestSpread": true
        }
    },
    "plugins": [
        "react-native",
        "prettier"
    ],
    "rules": {
        "react-native/no-unused-styles": 2,
        "react-native/split-platform-components": 2,
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true,
                "semi": true,
                "trailingComma": "es5",
                "tabWidth": 3,
                "useTabs": true
            }
        ],
        "linebreak-style": 0,
        "class-methods-use-this": 0,
        "react/jsx-indent": [3, "tab"],
        "react/jsx-indent-props": [3, "tab"],
        "react/forbid-prop-types": 0,
        "react/jsx-filename-extension": [1, {
            "extensions": [".js", ".jsx"]
        }],
        "dot-notation": 0,
        "no-nested-ternary": 0
    }
}